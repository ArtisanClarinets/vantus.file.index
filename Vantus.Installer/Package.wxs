<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs" xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package Name="Vantus File Indexer" Manufacturer="Vantus" Version="1.0.0.0" UpgradeCode="37042578-8723-4416-8616-258055615714" Scope="perMachine">
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="Vantus File Indexer" />
    </StandardDirectory>

    <Feature Id="Main">
      <ComponentGroupRef Id="HarvestedComponents" />
      <ComponentRef Id="ApplicationShortcut" />
    </Feature>

    <Icon Id="AppIcon" SourceFile="Setup\Logo.ico" />
    <Property Id="ARPPRODUCTICON" Value="AppIcon" />

    <ui:WixUI Id="WixUI_InstallDir" InstallDirectory="INSTALLFOLDER" />

    <WixVariable Id="WixUIBannerBmp" Value="Setup\banner.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="Setup\dialog.bmp" />
    <WixVariable Id="WixUILicenseRtf" Value="Setup\License.rtf" />
    
    <StandardDirectory Id="ProgramMenuFolder">
        <Component Id="ApplicationShortcut" Guid="*">
            <Shortcut Id="ApplicationStartMenuShortcut" 
                      Name="Vantus File Indexer"
                      Description="Vantus File Indexer Application"
                      Target="[INSTALLFOLDER]Vantus.App.exe"
                      WorkingDirectory="INSTALLFOLDER"
                      Icon="AppIcon"/>
            <RemoveFolder Id="CleanUpShortCut" Directory="ProgramMenuFolder" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\Vantus\VantusFileIndexer" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
        </Component>
    </StandardDirectory>

  </Package>
</Wix>
