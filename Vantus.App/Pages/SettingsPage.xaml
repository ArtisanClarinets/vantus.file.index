<Page x:Class="Vantus.App.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:Vantus.App.Controls"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="Settings">
    <ScrollViewer>
        <StackPanel Margin="24,12,24,24">
            <!-- Title -->
            <TextBlock Text="{Binding ViewModel.PageTitle}" 
                       FontSize="28" FontWeight="SemiBold" Margin="0,0,0,20" />

            <controls:SettingsPageRenderer Groups="{Binding ViewModel.Groups}" />
        </StackPanel>
    </ScrollViewer>
</Page>
