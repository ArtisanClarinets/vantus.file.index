<Page x:Class="Vantus.App.Views.RulesEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:Vantus.App.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Rules Editor">

    <Grid Margin="24">
        <Grid.RowDefinitions>
             <RowDefinition Height="Auto"/>
             <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Automation Rules" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="Manage file processing rules" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" Foreground="{DynamicResource PaletteGreenBrush}" 
                       Margin="0,0,24,0" FontWeight="SemiBold"/>
            
            <ui:Button Grid.Column="2" Content="Save Changes" Icon="{ui:SymbolIcon Save24}" 
                       Command="{Binding SaveCommand}" Appearance="Primary"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar: Rule List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8">
                    <ListView ItemsSource="{Binding Rules}" SelectedItem="{Binding SelectedRule}" BorderThickness="0" Background="Transparent">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="4,2"/>
                                <Setter Property="Padding" Value="8"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource ControlFillColorTertiaryBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Delete24}" 
                                            Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                            CommandParameter="{Binding}" 
                                            Appearance="Transparent" Padding="4"
                                            Foreground="{DynamicResource PaletteRedBrush}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>
                
                <ui:Button Grid.Row="1" Content="Add New Rule" Icon="{ui:SymbolIcon Add24}" 
                           Command="{Binding AddRuleCommand}" Margin="0,12,0,0" HorizontalAlignment="Stretch"/>
            </Grid>

            <!-- Editor -->
            <ui:Card Grid.Column="2" VerticalAlignment="Stretch" VerticalContentAlignment="Top">
                <Grid>
                    <Grid.Style>
                         <Style TargetType="Grid">
                             <Style.Triggers>
                                 <DataTrigger Binding="{Binding SelectedRule}" Value="{x:Null}">
                                     <Setter Property="Visibility" Value="Collapsed"/>
                                 </DataTrigger>
                             </Style.Triggers>
                         </Style>
                    </Grid.Style>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Rule Configuration" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                            
                            <!-- Name & Enabled -->
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Rule Name" Margin="0,0,0,6" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                    <ui:TextBox Text="{Binding SelectedRule.Name, UpdateSourceTrigger=PropertyChanged}" 
                                                PlaceholderText="Enter a descriptive name"/>
                                </StackPanel>
                                
                                <CheckBox Grid.Column="1" IsChecked="{Binding SelectedRule.IsEnabled}" 
                                          Content="Rule Enabled" Margin="16,0,0,0" VerticalAlignment="Bottom" Height="32"/>
                            </Grid>

                            <!-- Conditions -->
                            <StackPanel Margin="0,0,0,24">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Conditions (If)" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <ui:Button HorizontalAlignment="Right" Content="Add Condition" Icon="{ui:SymbolIcon Add12}" 
                                               Command="{Binding AddNewConditionCommand}" Appearance="Secondary" Padding="8,4" FontSize="12"/>
                                </Grid>
                                
                                <ItemsControl ItemsSource="{Binding CurrentConditions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.AvailableFields, RelativeSource={RelativeSource AncestorType=Page}}" SelectedItem="{Binding Field}" Margin="0,0,8,0" Padding="6"/>
                                                <ComboBox Grid.Column="1" ItemsSource="{Binding DataContext.AvailableOperators, RelativeSource={RelativeSource AncestorType=Page}}" SelectedItem="{Binding Operator}" Margin="0,0,8,0" Padding="6"/>
                                                <ui:TextBox Grid.Column="2" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Value"/>
                                                <ui:Button Grid.Column="3" Icon="{ui:SymbolIcon Dismiss24}" 
                                                        Command="{Binding DataContext.RemoveConditionCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                        CommandParameter="{Binding}"
                                                        Appearance="Transparent" Foreground="{DynamicResource PaletteRedBrush}" Margin="8,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Actions (Then)" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <ui:Button HorizontalAlignment="Right" Content="Add Action" Icon="{ui:SymbolIcon Add12}" 
                                               Command="{Binding AddNewActionCommand}" Appearance="Secondary" Padding="8,4" FontSize="12"/>
                                </Grid>
                                
                                <ItemsControl ItemsSource="{Binding CurrentActions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ComboBox Grid.Column="0" ItemsSource="{Binding DataContext.AvailableActionTypes, RelativeSource={RelativeSource AncestorType=Page}}" SelectedItem="{Binding Type}" Margin="0,0,8,0" Padding="6"/>
                                                <ui:TextBox Grid.Column="1" Text="{Binding Params, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Parameters (e.g. path)"/>
                                                <ui:Button Grid.Column="2" Icon="{ui:SymbolIcon Dismiss24}" 
                                                        Command="{Binding DataContext.RemoveActionCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                                        CommandParameter="{Binding}"
                                                        Appearance="Transparent" Foreground="{DynamicResource PaletteRedBrush}" Margin="8,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>
