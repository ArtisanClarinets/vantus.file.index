<Page x:Class="Vantus.App.Views.RulesEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:Vantus.App.ViewModels"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance vm:RulesEditorViewModel, IsDesignTimeCreatable=True}"
      Title="Rules">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Automation Rules" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <ui:Card Grid.Row="1" Margin="0,0,0,20">
            <StackPanel Margin="10">
                <TextBlock Text="Add New Rule" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding NewRuleName, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Rule Name" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="1" SelectedValue="{Binding NewRuleConditionType}" SelectedValuePath="Content" Margin="0,0,5,0">
                         <ComboBoxItem Content="extension" IsSelected="True"/>
                         <ComboBoxItem Content="name"/>
                    </ComboBox>
                    <TextBox Grid.Column="2" Text="{Binding NewRuleConditionValue, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Value (e.g. .pdf)" Margin="0,0,5,0"/>

                    <ComboBox Grid.Column="3" SelectedValue="{Binding NewRuleActionType}" SelectedValuePath="Content" Margin="0,0,5,0">
                         <ComboBoxItem Content="tag" IsSelected="True"/>
                         <ComboBoxItem Content="move"/>
                         <ComboBoxItem Content="copy"/>
                    </ComboBox>
                    <TextBox Grid.Column="4" Text="{Binding NewRuleActionValue, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Action Value" Margin="0,0,5,0"/>

                    <Button Grid.Column="5" Content="Add" Command="{Binding AddRuleCommand}" Appearance="Primary"/>
                </Grid>
            </StackPanel>
        </ui:Card>

        <ListView Grid.Row="2" ItemsSource="{Binding Rules}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="If" DisplayMemberBinding="{Binding ConditionType}" Width="100"/>
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding ConditionValue}" Width="150"/>
                    <GridViewColumn Header="Then" DisplayMemberBinding="{Binding ActionType}" Width="100"/>
                    <GridViewColumn Header="Value" DisplayMemberBinding="{Binding ActionValue}" Width="150"/>
                     <GridViewColumn Header="Actions">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" Appearance="Danger" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
