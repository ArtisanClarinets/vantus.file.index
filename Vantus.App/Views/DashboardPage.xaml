<Page x:Class="Vantus.App.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:Vantus.App.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Dashboard">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="System Dashboard" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="Overview of your indexing service" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
            
            <!-- Connection Status Badge -->
            <Border Grid.Column="1" CornerRadius="4" Padding="12,6" VerticalAlignment="Center">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource PaletteRedBrush}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PaletteGreenBrush}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Link24" Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ConnectionStatus}" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Files Indexed Card -->
            <ui:CardControl Grid.Column="0" Icon="{ui:SymbolIcon DocumentMultiple24}" Header="Total Files Indexed">
                <StackPanel>
                    <TextBlock Text="{Binding Status.FilesIndexed}" FontSize="32" FontWeight="Bold" Margin="0,8"/>
                    <TextBlock Text="Files currently in vector index" Foreground="{DynamicResource TextFillColorTertiaryBrush}" FontSize="12"/>
                </StackPanel>
            </ui:CardControl>

            <!-- Indexing Progress Card -->
            <ui:CardControl Grid.Column="2" Icon="{ui:SymbolIcon ArrowSync24}" Header="Indexing Progress">
                <StackPanel>
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ProgressBar Value="{Binding Status.ProgressPercent}" Maximum="100" Height="8" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding Status.ProgressPercent, StringFormat={}{0:N0}%}" 
                                   Margin="12,0,0,0" FontWeight="Bold"/>
                    </Grid>
                    <TextBlock Text="{Binding Status.CurrentLocation}" 
                               TextTrimming="CharacterEllipsis"
                               Foreground="{DynamicResource TextFillColorTertiaryBrush}" 
                               FontSize="12" ToolTip="{Binding Status.CurrentLocation}"/>
                </StackPanel>
            </ui:CardControl>
        </Grid>

        <!-- Detailed Status -->
        <ui:Card Grid.Row="2" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="System Details" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Last Scan Time" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Status.LastIndexTime}" FontFamily="Consolas"/>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Current Path" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Status.CurrentLocation}" FontFamily="Consolas" TextWrapping="Wrap"/>
                </Grid>
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>
